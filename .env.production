# Production Environment Variables
# IMPORTANT: Change all default values before deploying to production

# Database Configuration
MONGODB_URI=mongodb://admin:CHANGE_THIS_PASSWORD@mongodb:27017/portfolio?authSource=admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Redis Configuration
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# JWT Configuration - MUST CHANGE THESE
JWT_SECRET=CHANGE_THIS_TO_A_VERY_STRONG_SECRET_KEY_AT_LEAST_32_CHARS
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_VERY_STRONG_SECRET_KEY
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Admin Configuration
ADMIN_REGISTRATION_KEY=CHANGE_THIS_ADMIN_REGISTRATION_KEY

# Server Configuration
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://your-domain.com

# AI Service Configuration
AI_SERVICE_URL=http://ai-service:8000
AI_SERVICE_API_KEY=CHANGE_THIS_AI_SERVICE_API_KEY
AI_MODEL_NAME=microsoft/DialoGPT-medium
AI_MAX_LENGTH=512
AI_TEMPERATURE=0.7
AI_ENV=production
AI_LOG_LEVEL=warn

# Frontend Configuration
REACT_APP_API_URL=https://your-domain.com/api
REACT_APP_ENV=production
REACT_APP_ENABLE_CHATBOT=true
REACT_APP_ENABLE_ANALYTICS=false

# Security Configuration
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
CORS_ORIGIN=https://your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Logging
LOG_LEVEL=warn
LOG_FILE=logs/portfolio.log

# Email Configuration (for contact form)
EMAIL_USER=your-email@domain.com
EMAIL_PASS=your-app-password
EMAIL_SERVICE=gmail

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-ga-id

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Docker Configuration
COMPOSE_PROJECT_NAME=portfolio-prod

# Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY_ENABLED=true

# Session Configuration
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Cache Configuration
CACHE_TTL=3600

# Performance
COMPRESSION_ENABLED=true
STATIC_CACHE_MAX_AGE=31536000

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Site is under maintenance. Please check back later.

# API Versioning
API_VERSION=v1

# Feature Flags
FEATURE_CHATBOT=true
FEATURE_CONTACT_FORM=true
FEATURE_ADMIN_PANEL=true
FEATURE_ANALYTICS=false

# Third-party Integrations
GITHUB_TOKEN=your-github-token-for-repo-access
LINKEDIN_API_KEY=your-linkedin-api-key

# Deployment Information
DEPLOYMENT_DATE=2024-01-01
VERSION=1.0.0
BUILD_NUMBER=1

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Database Backup
DB_BACKUP_ENABLED=true
DB_BACKUP_FREQUENCY=daily
DB_BACKUP_RETENTION=30

# SSL/TLS Configuration
TLS_VERSION=1.2
CIPHER_SUITES=ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384

# Content Delivery
CDN_ENABLED=false
CDN_URL=https://cdn.your-domain.com

# Analytics and Monitoring
ANALYTICS_ENABLED=false
MONITORING_ENABLED=true
ERROR_REPORTING_ENABLED=true

# Legal and Compliance
PRIVACY_POLICY_URL=https://your-domain.com/privacy
TERMS_OF_SERVICE_URL=https://your-domain.com/terms
GDPR_COMPLIANCE=true

# Notification Configuration
NOTIFICATION_EMAIL=admin@your-domain.com
SLACK_WEBHOOK_URL=your-slack-webhook-for-notifications

# Performance Monitoring
PERFORMANCE_MONITORING=true
RESPONSE_TIME_THRESHOLD=2000
MEMORY_USAGE_THRESHOLD=80

# Security Scanning
SECURITY_SCAN_ENABLED=true
VULNERABILITY_SCAN_FREQUENCY=weekly

# Backup and Recovery
BACKUP_ENCRYPTION=true
BACKUP_COMPRESSION=true
RECOVERY_POINT_OBJECTIVE=1h
RECOVERY_TIME_OBJECTIVE=4h
